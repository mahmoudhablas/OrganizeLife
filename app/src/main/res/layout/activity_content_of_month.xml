<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context="com.example.mahmoud.organizelife.ContentOfMonthActivity">

    <ListView
        android:id="@+id/list_transcations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin">

    </ListView>
    <Button
        android:id="@+id/delete"
        android:layout_width="match_parent"
        android:layout_height="@dimen/heightButton"
        android:text="@string/textOfDeleteButtonTime"
        android:layout_marginBottom="@dimen/margin"
        android:layout_marginTop="@dimen/margin"
        android:layout_gravity="center_horizontal"
        android:background="@color/backgroundOfDeleteButton"
        android:elevation="@dimen/elevation"
        android:paddingLeft="@dimen/paddingButtonLeft"
        android:paddingRight="@dimen/paddingButtonRight"
        android:textColor="@color/textColor" />
</LinearLayout>
