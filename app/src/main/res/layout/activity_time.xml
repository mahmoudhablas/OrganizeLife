<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#bab6b6"
    tools:context="com.example.mahmoud.organizelife.TimeActivity">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:id="@+id/textPieChart"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#fdfcfc"
            android:text="PieChart for Today"
            android:textColor="#9c0414"
            android:textSize="30sp"
            android:typeface="serif"
            android:shadowColor="#aeabab"
            android:paddingBottom="10dp"
           android:gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            />
        <com.github.mikephil.charting.charts.PieChart
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/dayPieChart"
            android:background="#fdfcfc"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
        </com.github.mikephil.charting.charts.PieChart>
        <TextView
            android:id="@+id/textBarChart"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#fdfcfc"
            android:text="PieChart for Today"
            android:textColor="#9c0414"
            android:textSize="30sp"
            android:typeface="serif"
            android:shadowColor="#aeabab"
            android:paddingBottom="10dp"
            android:gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            />
        <com.github.mikephil.charting.charts.BarChart
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/weekBarChart"
            android:background="#fdfcfc"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
        </com.github.mikephil.charting.charts.BarChart>
        <TextView
            android:id="@+id/textTranscation"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#fdfcfc"
            android:text="PieChart for Today"
            android:textColor="#9c0414"
            android:textSize="30sp"
            android:typeface="serif"
            android:shadowColor="#aeabab"
            android:paddingBottom="10dp"
            android:gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            />
        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/list_transcation">

        </ListView>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:id="@+id/delete"
            android:text="Delete"
            />
    </LinearLayout>
</ScrollView>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/design"
        android:elevation="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="65dp"
        android:layout_marginRight="25dp"
        android:src="@drawable/plus"
        android:id="@+id/add"
        />

</RelativeLayout>
